{
  "name": "vertical-slice",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "up": "npm-run-all build start",
    "build": "npm-run-all sass autoprefixer rollup minifyjs transpilejs",
    "watch": "nodemon --watch src/ -e scss,js -x \"npm run build\"",
    "start": "node ./bin/www",
    "sass": "node-sass --include-path='./node_modules' --output-style compressed -o public/css src/sass/style.scss",
    "autoprefixer": "postcss -u autoprefixer -r public/css/*",
    "rollup": "rollup --config",
	"minifyjs": "google-closure-compiler-js --languageOut=ES6 public/javascript/bundle-es6.js > public/javascript/bundle-min-es6.js ",
	"transpilejs": "google-closure-compiler-js --languageOut=ES5 public/javascript/bundle-es6.js > public/javascript/bundle-es5.js ",
    "lint:js": "eslint src/**/*.js",
    "lint:sass": "sass-lint --config .sass-lint.yml 'src/**/*.scss' --verbose --no-exit",
    "lint": "npm-run-all lint:sass lint:js"
  },
  "dependencies": {
    "@springernature/global-box": "^2.0.0",
    "@springernature/global-colors": "0.0.1",
    "@springernature/global-expandable-box": "^0.1.0",
    "@springernature/global-grid": "0.1.1",
    "@springernature/global-mq": "0.1.1",
    "@springernature/global-spacing": "^0.1.0",
    "autoprefixer": "^8.6.3",
    "express": "~4.16.0",
    "google-closure-compiler": "^20180506.0.0",
    "hbs": "~4.0.1",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.1"
  },
  "devDependencies": {
    "@springernature/eslint-config": "^1.0.0",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-no-use-extend-native": "^0.3.12",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-unicorn": "^4.0.3",
    "google-closure-compiler-js": "^20180506.0.0",
    "node-sass": "^4.9.0",
    "rollup": "^0.59.4",
    "rollup-plugin-node-resolve": "^3.3.0",
    "sass-lint": "^1.12.1",
    "xo": "^0.21.1"
  }
}
